COMMAND=$1
mydir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"

case $1 in

	start)
        echo "Starting SWARM"
        $(< $mydir/dir.sh)/swarm
        ;;
    restart)
           echo "Restarting SWARM"
           screen -S miner -X quit
           sleep 3
           $(< $mydir/dir.sh)/swarm
        ;;
    stop)
        echo "Stopping SWARM"
        screen -S miner -X quit
        ;;
    *)
          echo "command does not exist"
          echo "availble commands:"
          echo "start"
          echo "restart"
          echo "stop"
        ;;
esac